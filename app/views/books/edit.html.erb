<h1>Editing Book</h1>

  <% if @book.present? %>
    <% if @book.errors.any? %>
      <div id = "error_explanation">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
          <ul style = "list-style: square;">
            <% @book.errors.full_messages.each do |message| %>
              <div class = "n">
                <li><%= message %></li>
              </div>
            <% end %>
          </ul>
      </div>
    <% end %>
  <% end %>


<%= form_for @book, url: "/books/#{@book.id}", local:true do |f| %>
 <div class = "field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
 </div>
 <div class = "field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
 </div>
 <div class = "actions">
  <%= f.submit 'Update Book'%>
  <% end %>
 </div>

 <%= link_to 'Show', "/books/#{@book.id}" %> |
 <a class="back" href="/books">Back</a>
